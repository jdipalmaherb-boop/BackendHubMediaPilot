DATABASE_URL="postgresql://postgres:postgres@localhost:5432/backendhub?schema=public"
PORT=4000
NODE_ENV=development

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-at-least-32-characters-long"

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Email Service Configuration
EMAIL_PROVIDER=development  # development, sendgrid, aws-ses
FROM_EMAIL=noreply@backendhub.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (if using AWS SES)
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# OAuth Providers
META_CLIENT_ID=
META_CLIENT_SECRET=
META_REDIRECT_URI=http://localhost:4000/oauth/callback/meta

# S3/MinIO Configuration
S3_BUCKET=assets
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
S3_PRESIGN_EXPIRE=3600     # 1 hour in seconds

# Redis / Worker
REDIS_URL=redis://localhost:6379
VIDEO_WORKER_CONCURRENCY=1

# Video Processing Presets
MOBILE_BITRATE_LIMIT=2000000  # 2Mbps for mobile preset
HIGH_BITRATE_LIMIT=8000000    # 8Mbps for high preset

# Caption Processing
WHISPER_MODEL=base            # whisper model size (tiny, base, small, medium, large)
OPENAI_API_KEY=your-openai-api-key  # For GPT-5 caption polishing (optional)

# GPT-5 Service Configuration
GPT_MAX_TOKENS=4000           # Maximum tokens per request

# Prompt Sanitization Configuration
PROMPT_MAX_INPUT_LENGTH=4000  # Maximum input length per field
PROMPT_MAX_UNIQUE_TOKENS=100  # Maximum unique tokens per input
PROMPT_SUSPICIOUS_THRESHOLD=3 # Maximum suspicious patterns before blocking

# Scheduler Configuration
SCHEDULER_WORKER_CONCURRENCY=2  # Number of concurrent scheduler workers
CREDENTIALS_ENCRYPTION_KEY=your-32-character-encryption-key-here

# GoHighLevel Integration
GOHIGHLEVEL_API_KEY=your_gohighlevel_api_key_here
GOHIGHLEVEL_WORKER_CONCURRENCY=3

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# Reports Configuration
REPORTS_WORKER_CONCURRENCY=2  # Number of concurrent report workers

# Logging Configuration
LOG_LEVEL=info  # fatal, error, warn, info, debug, trace
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id  # Optional Sentry integration
SLOW_REQUEST_THRESHOLD=1000  # Log requests slower than this (ms)


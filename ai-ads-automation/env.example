# Database Configuration
DATABASE_URL=postgresql://ai_ads_user:ai_ads_password@localhost:5432/ai_ads
SQLITE_URL=sqlite:///./ai_ads.db

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Platform API Keys
META_ACCESS_TOKEN=your-meta-access-token-here
META_APP_ID=your-meta-app-id-here
META_APP_SECRET=your-meta-app-secret-here

GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token-here
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id-here
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret-here
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token-here
GOOGLE_ADS_CUSTOMER_ID=your-google-ads-customer-id-here

TIKTOK_ACCESS_TOKEN=your-tiktok-access-token-here
TIKTOK_APP_ID=your-tiktok-app-id-here
TIKTOK_APP_SECRET=your-tiktok-app-secret-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Feature Flags
ENABLE_AI_OPTIMIZATION=true
ENABLE_AUTOMATION=true
ENABLE_AB_TESTING=true
ENABLE_NOTIFICATIONS=true
ENABLE_SIMULATION=true

# Safety & Limits
MAX_DAILY_SPEND=10000.0
MAX_BUDGET_INCREASE_PERCENT=50.0
ANOMALY_DETECTION_THRESHOLD=3.0
AUTO_THROTTLE_ENABLED=true

# ML Configuration
ML_MODEL_PATH=./models/
TRAINING_DATA_PATH=./data/training/
SIMULATION_DATA_PATH=./data/simulation/
BATCH_SIZE=32
LEARNING_RATE=0.001
TRAINING_EPOCHS=100

# Optimization Engine
OPTIMIZER_UPDATE_FREQUENCY=300  # seconds
CONTEXTUAL_BANDIT_ALPHA=1.0
RL_POLICY_LEARNING_RATE=0.0003
RL_POLICY_EPOCHS=10

# Creative Generation
CREATIVE_APP_API_URL=http://localhost:8080
CREATIVE_APP_API_KEY=your-creative-app-key-here
FALLBACK_TO_SYNTHETIC=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development

# Development
ENVIRONMENT=development
DEBUG=true
RELOAD=true



